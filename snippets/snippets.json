{
    "isif condition": {
        "prefix": "isif",
        "body": [
            "<isif condition=\"${ ${1} }\" >",
            "",
            "${<iselse/>}",
            "",
            "</isif>"
        ],
        "description": "isif condition"
    },
    "isloop": {
        "prefix": "isloop",
        "body": [
            "<loop items=\"${1}\" var=\"${2}\">",
            "${0}",
            "</isloop>"
        ],
        "description": "isloop tag"
    },
    "isprint": {
        "prefix": "isprint",
        "body": [
            "<isprint value=\"${1}\" encoding=\"${2:on}\" />"
        ],
        "description": "isprint tag"
    },
    "iscomment": {
        "prefix": "iscomment",
        "body": [
            "<iscomment>",
            "${0}",
            "</iscomment>"
        ],
        "description": "iscomment tag"
    },
    "isset": {
        "prefix": "isset",
        "body": [
            "<isset name=\"${1}\" value=\"${2}\" scope=\"${3}\"/>\n${0}"
        ],
        "description": "isset tag"
    },
    "isdecorate": {
        "prefix": "isdecorate",
        "body": [
            "<isdecorate template=\"${1}\">",
            "${0}",
            "</isdecorate>"
        ],
        "description": "isdecorate tag"
    },
    "isscript": {
        "prefix": "isscript",
        "body": [
            "<isscript>",
            "${0}",
            "</isscript>"
        ],
        "description": "isscript tag"
    },
    "isinclude" : {
        "prefix": "isinclude_url",
        "body": [
            "<isinclude url=\"${1}\"/>\n${0}"
        ],
        "description": "isinclude url tag"
    },
    "isinclude template" : {
        "prefix": "isinclude_template",
        "body": [
            "<isinclude template=\"${1}\" />\n${0}"
        ],
        "description": "isinclude template tag"
    },
    "iscontent" : {
        "prefix": "iscontent",
        "body": [
            "<iscontent type=\"text/html\" charset=\"UTF-8\" compact=\"true\" />"
        ],
        "description": "iscontent tag"
    },
    "isinputfield" : {
        "prefix": "isinputfield",
        "body": [
            "<isinputfield formfield=\"${1}\" type=\"${2:input\" />"
        ],
        "description": "isinputfield tag"
    },
    "iscache" : {
        "prefix": "iscache",
        "body": [
            "<iscache type=\"${1:relative}\" hour=\"${2:24}\" status=\"${3:on}\" />\n${0}"
        ],
        "description": "iscache tag"
    }
}